<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_grey"
        android:minWidth="100dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="ndsknvmvsdkn"
            android:textSize="10sp"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true" />


            <RelativeLayout
                android:id="@+id/layoutcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textname">


                <TextView
                    android:id="@+id/textContentFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="cnldsbvljffdgtfvhb "
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

            </RelativeLayout>

        <TextView
            android:id="@+id/textdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:text="vndlfknknb"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/layoutcontent"
            android:layout_below="@+id/layoutcontent"
            android:layout_marginRight="10dp" />


    </RelativeLayout>

</LinearLayout>